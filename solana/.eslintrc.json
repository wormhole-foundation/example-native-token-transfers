{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": "standard-with-typescript",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    plugins: [
        '@stylistic'
    ],
    "rules": {
        '@stylistic/indent': ['error', 2],
        '@stylistic/max-len': ['error', 80],
    }
}
